extends layout2  
include mixins/_orders

block content 
    h2= title 
    hr

    if user
        h3= `Hi, ${user.first_name}!`

        if wishlists.length > 0
            h3 Your Wishlist : 
            each wishlist in wishlists
                +wishlists(wishlist)
        else 
            h3 No Wishlist to show, yet...
    else 
        h3 Please login to view this section 